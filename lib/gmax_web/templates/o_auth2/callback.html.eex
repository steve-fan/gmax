<div>
    <h1>
	成功连接 Google 账号
	<%= @user.email %>
    </h1>
    <div>页面将在 <span id="countdown">5</span> 秒后自动关闭</div>
</div>

<script>
 function closeWindow() {
     window.close();
 }
 window.setInterval(closeWindow, 5000);

 let divCountdown = document.querySelector("#countdown");
 let count = 5000;
 var x = setInterval(function() {
     divCountdown.textContent = count / 1000;
     count = count - 1000;
     if (count < 0 ) {
	 clearInterval(x);
     }
 }, 1000);
</script>
